import java.util.*;

public class Main {

    public static void nextPermutation(char[] arr, int left, int right) {
      
        for (left = arr.length - 2; left >= 0; left--) {
            if (arr[left] < arr[left + 1])
            break;
        }

        if (left >= 0) {
        
            for (right = arr.length - 1; right > left; right--) {
                if (arr[right] > arr[left]) break;
            }

           
            swap(arr, left, right);
        }

       
        reverse(arr, left + 1, arr.length - 1);

      
        System.out.println("Next permutation: " + String.valueOf(arr));
    }

    static void swap(char[] arr, int left, int right) {
        char temp = arr[left];
        arr[left] = arr[right];
        arr[right] = temp;
    }

    static void reverse(char[] arr, int left, int right) {
        while (left < right) {
            swap(arr, left, right);
            left++;
            right--;
        }
    }

    public static void main(String[] args) {
        String s = "ACB"; 
        char[] arr = s.toCharArray();
        int ileft = 0, iright = 0;
        nextPermutation(arr, ileft, iright);
    }
}
